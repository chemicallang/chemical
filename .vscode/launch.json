{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Compile Tests",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/x64-debug/Compiler.exe",
            "args": [
                "lang/tests/build.lab",
                "-arg-minimal",
                "-v",
                "-vl",
                "-bm",
                "-bm-modules",
                "--debug-ir",
                "--mode",
                "debug_complete",
                "--assertions",
                "--no-cache"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build Compiler"
        },
        {
            "name": "Compile Sample",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/x64-debug/Compiler.exe",
            "args": [
                "lang/sample/compiler.ch",
                "-o",
                "lang/sample/compiled/compiled.exe"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build Compiler"
        },
        {
            "name": "Interpreter",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/x64-debug/Interpreter.exe",
            "args": [
                "lang/sample/hello-world.ch"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build Interpreter"
        },
        {
            "name": "TCC Compiler Tests",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/x64-debug/TCCCompiler.exe",
            "args": [
                "lang/tests/build.lab",
                "-arg-minimal",
                "-v",
                "-vl",
                "-bm",
                "--mode",
                "debug_complete",
                "--assertions",
                "--no-cache"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build TCCCompiler"
        }
    ]
}
